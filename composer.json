{
	"name": "ai-feedback/ai-feedback",
	"description": "AI-powered editorial feedback for WordPress Gutenberg editor",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=8.1",
		"wordpress/php-ai-client": "^0.3.0"
	},
	"require-dev": {
		"mockery/mockery": "^1.6",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"phpunit/phpunit": "^10.5",
		"squizlabs/php_codesniffer": "^3.13",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"wp-coding-standards/wpcs": "^3.3",
		"wp-phpunit/wp-phpunit": "^6.9"
	},
	"autoload": {
		"psr-4": {
			"AI_Feedback\\": "includes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"AI_Feedback\\Tests\\": "tests/php/"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test:coverage": "vendor/bin/phpunit --coverage-html coverage/php",
		"phpcs": "vendor/bin/phpcs --standard=WordPress includes/",
		"phpcbf": "vendor/bin/phpcbf --standard=WordPress includes/",
		"phpstan": "vendor/bin/phpstan analyze --memory-limit 1G"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true,
			"php-http/discovery": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"preferred-install": "dist",
		"platform": {
			"php": "8.1.0"
		}
	}
}