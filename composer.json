{
  "name": "ai-feedback/ai-feedback",
  "description": "AI-powered editorial feedback for WordPress Gutenberg editor",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.0",
    "wordpress/php-ai-client": "^0.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5",
    "wp-phpunit/wp-phpunit": "^6.9",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "AI_Feedback\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AI_Feedback\\Tests\\": "tests/php/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage/php",
    "phpcs": "phpcs --standard=WordPress includes/",
    "phpcbf": "phpcbf --standard=WordPress includes/",
    "phpstan": "phpstan analyze includes/ --level=5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
